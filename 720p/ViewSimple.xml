					<left>267</left>
				    <width>600</width>
				    <height>20</height>
			        <texture border="5">frames/separateur_simple.png</texture>
					<aspectratio align="center" aligny="center">stretch</aspectratio>
					<colordiffuse>accent_3</colordiffuse>			          
			        </control>
