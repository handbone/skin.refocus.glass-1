	<include name="global_Clock">
		<control type="group">
			<include>toggle_Menu</include>
			<visible>[![Player.HasMedia + !Skin.HasSetting(mediaoverlay.disable)] | [Player.HasMedia + !IsEmpty(Window(10025).Property(TvTunesIsAlive))]] + ![Window.IsActive(infodialog) | Window.IsActive(extendedprogressdialog) | Window.IsActive(movieinformation) | Window.IsActive(musicinformation) | Window.IsActive(weather)]</visible>
			<control type="label">
				<label>$VAR[toast_Top]</label>
				<include>toast_Top</include>
			</control>
			<control type="label">
				<label>$VAR[toast_Bottom]</label>
				<textcolor>Color2</textcolor>
				<include>toast_Bottom</include>
			</control>
			<control type="image">
				<top>18</top>
				<include>toast_Icon</include>
				<texture>$VAR[toast_Icon]</texture>
				<visible>!Player.Muted + IntegerGreaterThan(Player.Volume,0)</visible>
